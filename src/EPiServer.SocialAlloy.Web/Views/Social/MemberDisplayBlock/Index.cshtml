@using EPiServer.Web.Mvc.Html
@using EPiServer.SocialAlloy.Web.Social.Models.Groups
@model MembershipDisplayBlockViewModel
<div>
    <h2 @Html.EditAttributes(m => m.Heading)>@Model.Heading</h2>
    <hr />
    @if (!String.IsNullOrWhiteSpace(Model.SubmitErrorMessage))
    {
        <div id="errorMessage" style="color: red;">@Model.SubmitErrorMessage</div>
    }
    else
    {
        @if (Model.MemberList != null || Model.MemberList.Any())
        {
            <div class="row">
                <div class="span6">
                    <div>
                        <table class="table table-striped">

                            @foreach (var member in Model.MemberList)
                            {
                                <tr>
                                    <td><strong>member.Data.User.Id</strong></td>
                                    <td> member.Extension.Company </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="span6">
                    <strong>No members exist for the selected group.</strong>
                </div>
            </div>
        }
    }
</div>
